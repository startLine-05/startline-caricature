{
  "bsonType": "object",
  "required": ["author", "name", "content"],
  "permission": {
    "read": "doc.user_id == auth.uid && doc.caricature_status == 0 || doc.caricature_status == 1",
    "create": "auth.uid != null",
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID（用户 ID），系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "漫画作者ID， 参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "author": {
      "bsonType": "string",
      "title": "作者名称"
    },
    "category_id": {
      "bsonType": "string",
      "title": "分类",
      "description": "分类 id，参考`uni-news-categories`表",
      "foreignKey": "opendb-caricature-categories._id",
      "enum": {
        "collection": "opendb-caricature-categories",
        "field": "name as text, _id as value"
      }
    },
    "name": {
      "bsonType": "string",
      "title": "漫画名称",
      "description": "漫画名称",
      "label": "漫画名称",
      "trim": "both"
    },
    "avatar": {
      "bsonType": "string",
      "title": "封面大图",
      "description": "缩略图地址",
      "label": "封面大图",
      "trim": "both"
    },

    "content": {
      "bsonType": "array",
      "title": "漫画内容",
      "description": "漫画内容,包含有的目录",
      "label": "漫画内容",
      "trim": "right"
    },
    "excerpt": {
      "bsonType": "string",
      "title": "漫画简介",
      "description": "漫画简介",
      "label": "摘要",
      "trim": "both"
    },
    "caricature_status": {
      "bsonType": "int",
      "title": "漫画状态",
      "description": "漫画状态：0 连载中 1 已完结",
      "defaultValue": 0,
      "enum": [
        {
          "value": 0,
          "text": "连载中"
        },
        {
          "value": 1,
          "text": "已完结"
        }
      ]
    },
    "view_count": {
      "bsonType": "int",
      "title": "阅读数量",
      "description": "阅读数量",
      "permission": {
        "write": false
      }
    },
    "like_count": {
      "bsonType": "int",
      "description": "喜欢数、点赞数",
      "permission": {
        "write": false
      }
    },
    "is_sticky": {
      "bsonType": "bool",
      "title": "是否置顶",
      "description": "是否置顶",
      "permission": {
        "write": false
      }
    },
    "is_essence": {
      "bsonType": "bool",
      "title": "阅读推荐",
      "description": "阅读推荐",
      "permission": {
        "write": false
      }
    },
    "comment_status": {
      "bsonType": "int",
      "title": "开放评论",
      "description": "评论状态：0 关闭  1 开放",
      "enum": [
        {
          "value": 0,
          "text": "关闭"
        },
        {
          "value": 1,
          "text": "开放"
        }
      ]
    },
    "comment_count": {
      "bsonType": "int",
      "description": "评论数量",
      "permission": {
        "write": false
      }
    },
    "last_comment_user_id": {
      "bsonType": "string",
      "description": "最后回复用户 id，参考`uni-id-users` 表",
      "foreignKey": "uni-id-users._id"
    },
    "publish_date": {
      "bsonType": "timestamp",
      "title": "发表时间",
      "description": "发表时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "publish_ip": {
      "bsonType": "string",
      "title": "发布漫画时IP地址",
      "description": "发表时 IP 地址",
      "forceDefaultValue": {
        "$env": "clientIP"
      }
    },
    "last_modify_date": {
      "bsonType": "timestamp",
      "title": "最后修改时间",
      "description": "最后修改时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "last_modify_ip": {
      "bsonType": "string",
      "description": "最后修改时 IP 地址",
      "forceDefaultValue": {
        "$env": "clientIP"
      }
    },
    "mode": {
      "bsonType": "number",
      "title": "排版显示模式",
      "description": "排版显示模式,如左图右文、上图下文等"
    }
  }
}
